generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id Int @id @default(autoincrement())

  title     String
  content   String
  createdAt DateTime  @default(now())

  comments  Comment[]
}

model Comment {
  id Int @id @default(autoincrement())

  content   String
  createdAt DateTime  @default(now())

  postId    Int
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}
